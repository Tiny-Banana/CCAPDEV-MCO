<html lang="en">
    <head>
        <%- include("./partials/head.ejs") %>
    </head>

    <body>
        <div class="auth" id="signin">
            <div class="auth-container-login">
                <div class="auth-content">
                    <div class="myform">
                        <h1 class="nav-name text-center">ArcherEats</h1>
                        <h1 class="text-center mt-5">Welcome Back!</h1>
                        <form action="/user/login" method="POST">
                            <div class="mb-3 mt-4 form-floating">
                                <input placeholder="username" type="text" class="form-control" id="username-login" name="username-login">
                                <label for="username-login" class="form-label">Username</label>
                            </div>
                            <div class="mb-3 form-floating">
                                <input placeholder="password" type="password" class="form-control" id="password-login" name="password-login">
                                <label for="password-login" class="form-label">Password</label>
                            </div>
                            <input type="checkbox" id="remember-me" name="remember-me">
                            <label for="remember-me"><p class="subtext">Remember Me</p></label>
                            <button class="btn btn-light mt-4 gy-0 signin-js">SIGN IN</button>
                            <p class="pt-3 subtext">Don't have an account? <a href="/user/signup">Sign up</a></p>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </body>

</html>

